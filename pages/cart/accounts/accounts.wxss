  line-height: 16rpx;
  margin-bottom: 40rpx;
}
.order_title .price{
  display: flex;
}
.order_title .price .newprice{
  color: #BD4044;
  font-size: 40rpx;
  font-weight: 700;
}
.order_title .price .oldprice{
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
  align-self: flex-end;
}
.order_content .stepper{
  display: flex;
  height: 30rpx;  
  /*给主容器设一个边框*/  
  border: 1px solid #BD4044;
  border-radius: 3rpx; 
  overflow: hidden;
  margin: 20rpx 0;
  align-self: flex-end;
}

/*加号和减号*/  
.stepper text {  
  color: #BD4044;
  width: 40rpx;
  line-height: 30rpx;
  height: 30rpx;  
  text-align: center; 
  margin: 0;
}  

/*数值*/  
.stepper input {  
  width: 68rpx;  
  height: 30rpx;  
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #BD4044;  
  border-right: 1px solid #BD4044;  
  min-height: 30rpx;
  min-height: 30rpx;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}  

/*普通样式*/  
.stepper .normal{  
  color: #fff;
  background-color: #BD4044;  
}  
