.transaction{
  width: 420rpx;
  margin: 200rpx 0 0 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.transaction image{
  width: 180rpx;
  height: 236rpx;
}
.success{
  color: #333;
  font-weight: 700;
  font-size: 44rpx;
}
.thank{
  color: #666;
  font-size: 24rpx;
}
.price{
  color: #333;
  font-weight: 700;
  font-size: 52rpx;
  margin-bottom: 50rpx;
}
.info{
  color: #666;
  font-size: 24rpx;
  margin: 0 0 20rpx 0;
}
.info text{
  margin-left: 20rpx;
}
.btn{
  width: 280rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 28rpx;
  background-color: #BD4044;
}