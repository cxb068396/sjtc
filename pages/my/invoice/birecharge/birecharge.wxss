  background-color: #f6f6f6;
}
.zhanwei{
  width: 100%;
  height: 20rpx;
}
.index_top{
  width: 95%;
  background-color: #fff;
  border-radius: 24rpx;
  margin: auto;
}
.index_top_one{
  width: 95%;
  height: 82rpx;
  border-bottom: 1rpx solid #f6f6f6;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.top_text{
  color: #343434;
}
.top_container{
  width: 75%;
  height: inherit;
}
.top_container_one{
  width: 75%;
  height: inherit;
  display: flex;
  align-items: center;
}
.top_container_lineOne{
  color: #666;
