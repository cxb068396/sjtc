}
.top_container_lineOne>image{
  width: 32rpx;
  height: 32rpx;
}
.top_container_lineOne>text{
  margin-left: 11rpx;
  color: #666;
}
.top_text_bottom{
  width: 90%;
  height: inherit;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
}
.top_text_bottom>image{
  width: 15rpx;
  height: 25rpx;
}
.index_bottom{
  width: 95%;
  height: 82rpx;
  background-color: #fff;
  border-radius: 24rpx;
  margin: auto;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.bottom_text{
  width: 150rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}
.bottom_container{
  width: 75%;
}
.index_footer{
  width: 95%;
  height: 64rpx;
  background-color: #BE4044;
  border-radius: 32rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  text-align: center;
  line-height: 64rpx;position: fixed;
  bottom: 20rpx;
