/* pages/my/invoice/ordering/ordering.wxss */
.wrap{
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
}
.zhanwei{
  width: 100%;
  height: 20rpx;
}
.index_one{
  width: 95%;
  height: 167rpx;
  background-color: #fff;
  border-radius: 24rpx;
  margin: auto;
  display: flex;
  align-items: center;
}
.index_one_img{
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}
.index_two{
  width: 70%;
  height: inherit;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #343434;
  display: flex;
  flex-direction: column;
}
.index_two_price{
  margin-top: 23rpx;
}
.index_two>view{
  padding-bottom: 5rpx;
  box-sizing: border-box;
}
.index_footer{
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.footer_container{
  width: 95%;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: auto;
}
.footer_container_top{
  display: flex;
}
.footer_container_img{
  width: 26rpx;
  height: 26rpx;
}
.footer_container_quanxuan{
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 32rpx;
  margin-left: 10rpx;
}
.footer_container_all{
  width: 30%;
  height: inherit;
  display: flex;
  position: relative;
  left: 15%;
}
.all_top{
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 32rpx;
  margin-top: 20rpx;
  position: absolute;
  right: 0;
}
.all_top>text{
  color: #BD4044;
}
.all_bottom{
  font-size: 20rpx;
  font-weight: 400;
  color: #999;
  line-height: 32rpx;
  position: absolute;
  right: 0;
  top: 55rpx;
}
.footer_container_nextStep{
  width: 176rpx;
  height: 56rpx;
  background-color: #BD4044;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  line-height: 56rpx;
  text-align: center;
}