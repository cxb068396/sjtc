/* pages/my/invoice/ivpayable/ivpayable.wxss */
.wrap {
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
}

.zhanwei {
  width: 100%;
  height: 20rpx;
}

.index_head {
  overflow: hidden;
  width: 95%;
  margin: 0 auto;
}

scroll-view {
  border-radius :24rpx;
  overflow:hidden;
-webkit-backface-visibility: hidden;
-webkit-transform: translate3d(0, 0, 0);
}

.index_box {
  /* width: 95%; */
  height: 82rpx;
  background-color: #fff;
  margin: auto;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 400;
  color: #343434;
  position: relative;
}

.index_box_left {
  margin-left: 20rpx;
}

.index_box_right {
  width: 24rpx;
  height: 24rpx;
  margin: 20rpx;
}

.index_footer {
  width: 100%;
  height: 104rpx;
  background-color: #f6f6f6;
}

.index_footer_container {
  width: 95%;
  height: 80rpx;
  background-color: #BD4044;
  border-radius: 40rpx;
  margin: auto;
  position: fixed;
  bottom: 20rpx;
  left: 2%;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
}

.del-btn {
  width: 120rpx;
  height: 82rpx;
  font-size: 24rpx;
  position: absolute;
  background-color: #BE4044;
  /* border-radius: 24rpx; */
  border-top-right-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  right: -120rpx;
  bottom: 0;
  z-index: 15;
  line-height: 82rpx;
  text-align: center;
  color: white;
}