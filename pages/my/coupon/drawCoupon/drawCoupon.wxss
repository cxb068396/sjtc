page{
  background-color: #f6f6f6;
  height: 100%;
  width: 100%;
}
.noCoupon{
width: 100%;
height: 100%;
background-color: #fff;
display: flex;
flex-direction: column;
align-items: center;
}
.noCoupon image{
  width: 376rpx;
  height: 340rpx;
  margin: 208rpx 0 40rpx 50rpx;
}
.noCoupon view{
  font-size: 28rpx;
  color: #999;
}
.hasCoupon{
  margin: 20rpx;
}
.hasCoupon_item{
  width: 717rpx;
  height: 181rpx;
  position: relative;
}
.hasCoupon_item image{
  position: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.hasCoupon_item_left{
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 20rpx;
  width: 165rpx;
  text-align: center;
}
.hasCoupon_item_left text{
  font-size: 80rpx;
  font-weight: bold;
}
.hasCoupon_item_middle{
  position: absolute;
  top: 48rpx;
  left: 210rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  color: #999;
  font-size: 22rpx;
}
.hasCoupon_item_middle>view:first-child{
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  /* margin-bottom: 10rpx; */
}
.hasCoupon_item_right{
  position: absolute;
  top: 60rpx;
  right: 20rpx;
}
.hasCoupon_item_right .btn{
  background-color: #BD4044;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}
.hasCoupon_item_right .on{
  background-color: #999;
}
.rightUser{
  margin: 20rpx auto;
  width: 710rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background-color: #BD4044;
}

.footer_coupon{
  width: 100%;
  height: 110rpx;
  background-color: #F6F6F6;
  position: fixed;
  bottom: 0;
  left: 0;
}

.conpon_left_bottom{
  position: relative;
  top: -7rpx;
}