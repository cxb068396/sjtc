page {
  background-color: #F6F6F6;
}

.avatar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  align-items: center;
  margin: 20rpx;
  border-radius: 24rpx;
}

.avatar view {
  color: #333;
  font-size: 28rpx;
}

.avatar image {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
}

.person_info {
  padding: 20rpx;
  background-color: #fff;
  align-items: center;
  margin: 20rpx;
  border-radius: 24rpx;
  box-sizing: border-box;
  padding-top: unset;
  padding-bottom: unset;
}
.person_info_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.person_info_list .info_left{
  font-size: 24rpx;
  color: #333;
}
.info_right {
  display: flex;
  align-items: center;
}
.info_right view{
  font-size: 24rpx;
  color: #666;
}
.info_right image{
  width: 12rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.person_info>view:first-child{
  border-bottom: 1rpx solid #F6F6F6
}
.person_info>view:nth-child(2){
  border-bottom: 1rpx solid #F6F6F6;
}
