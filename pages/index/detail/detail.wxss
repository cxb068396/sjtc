/*商品规格样式*/
.wrap{
  width: 100%;
  height: 100%;
  position: relative;
}
.shade{
  width: 100%;
  height: 100%;
  top:0;   
  background:rgba(0,0,0,0.5);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 999;   
 position: fixed;
}
.conts{
  position: absolute;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  z-index: 999;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 20rpx 0 50rpx 0; 
}
.header{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.header .left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.header .img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.content{
  display: flex;
  flex-direction: column;
}
.content .price{
  font-size: 32rpx;
  color: #BD4044;
  font-weight: bold;
}
.content .num{
  font-size: 24rpx;
  color: #999999;
}
.conts .right{
  display: flex;
  flex-direction: column;
  width: 36rpx;
  height: 36rpx;
}
.conts .right image{
  width: 100%;
}
.middle{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.middle .title{
  font-size: 24rpx;
  color: #333;
}
.middle .skus{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.skus .sku{
  /* width: 120rpx;
  height: 40rpx; */
  text-align: center;
  /* line-height: 40rpx; */
  font-size: 24rpx;
  color: #BD4044;
  border: 1rpx solid #BD4044;
  border-radius: 24rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
  margin-bottom: 10rpx;
}
.skus .on{
  color:#fff;
  background-color: #BD4044;
}
.bottom{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.bottom .addnum{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom .addnum .left{
  font-size: 24rpx;
  color: #333;
}
.bottom .addnum .stepper{
  display: flex;
  height: 30rpx;  
  /*给主容器设一个边框*/  
  border: 1px solid #BD4044;
  border-radius: 3rpx; 
  overflow: hidden;
  margin: 20rpx 0;
}

/*加号和减号*/  
.stepper text {  
  color: #BD4044;
  width: 40rpx;
  line-height: 30rpx;
  text-align: center; 
  margin: 0;
  height: 30rpx;
}  

/*数值*/  
.stepper input {  
  width: 68rpx;  
  /* height: 42rpx;   */
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 12px;  
  /*给中间的input设置左右边框即可*/  
  border-left: 1px solid #BD4044;  
  border-right: 1px solid #BD4044;  
  height: 30rpx;
  min-height: 30rpx;
  min-height: 30rpx;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}  

/*普通样式*/  
.stepper .normal{  
  color: #fff;
  background-color: #BD4044;  
}  
.btn{
  width: 710rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  background-color: #BD4044;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  position: relative;
  bottom: -24rpx;
}
